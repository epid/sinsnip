#main
  %h2
    Posts tagged:
    %em= @tag
  - @snippets.each do |s|
    .snip
      .snip_title== <a href="/s/#{s.id}">#{s.title}</a>
      .CodeRay
        ~ CodeRay.scan(s.summary, s.language).div
      .snip_foot
        .snip_lang= s.language
        .snip_tags
          Tags:
          - s.tags.split.each do |t|
            == <a href="/t/#{t}">#{t}</a>
